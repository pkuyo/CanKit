<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <OutputType>Library</OutputType>
    <Platforms>AnyCPU</Platforms>
    <Configurations>Debug;Release;Fake</Configurations>
    <Version>$(CanKitCoreVersion)</Version>
    <Description>ISO-TP (ISO 15765-2) protocol wrapper built on CanKit.Core: segmentation/reassembly, flow control, and standard settings using endpoint-based CAN bus opening.</Description>
    <PackageTags>CAN;CAN bus;ISO-TP;UDS;ISO15765-2;CanKit</PackageTags>
    <AssemblyVersion>1.0.0.0</AssemblyVersion>
	  
	<!-- Using Span and unsafe block in async methods -->
	<LangVersion>13</LangVersion>
	  
    <FileVersion>$(CanKitCoreFileVersion)</FileVersion>
    <Authors>Pkuyo</Authors>
    <RepositoryUrl>https://github.com/pkuyo/CanKit</RepositoryUrl>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
  </PropertyGroup>
  <ItemGroup>
    <ProjectReference Include="..\\CanKit.Core\\CanKit.Core.csproj" />
  </ItemGroup>
  <ItemGroup Condition="'$(TargetFramework)'=='netstandard2.0'">
    <PackageReference Include="System.Memory" Version="4.5.4" />
    <PackageReference Include="System.Runtime.CompilerServices.Unsafe" Version="6.1.2" />
    <PackageReference Include="System.Threading.Tasks.Extensions" Version="4.5.4" />
  </ItemGroup>
  <ItemGroup>
    <None Include="README.md" Pack="true" PackagePath="" />
  </ItemGroup>
</Project>
