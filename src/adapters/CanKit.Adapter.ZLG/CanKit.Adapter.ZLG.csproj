<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
        <RootNamespace>CanKit.Adapter.ZLG</RootNamespace>
        <Platforms>x64;x86;AnyCPU</Platforms>
        <PackageId>CanKit.Adapter.ZLG</PackageId>
        <AssemblyName>CanKit.Adapter.ZLG</AssemblyName>
        <Version>$(CanKitCoreVersion)</Version>
        <Description>ZLG adapter for CanKit, enabling unified access to ZLG USBCAN/PCIe CAN/CAN FD devices (zlgcan.dll).</Description>
        <PackageTags>CAN;can bus;CANFD;ZLG;zlgcan;CanKit</PackageTags>
        <AssemblyVersion>1.0.0.0</AssemblyVersion>
        <FileVersion>$(CanKitCoreFileVersion)</FileVersion>
        <Authors>Pkuyo</Authors>
        <RepositoryUrl>https://github.com/pkuyo/CanKit</RepositoryUrl>
        <Configurations>Debug;Release;Fake</Configurations>
        <PackageReadmeFile>README.md</PackageReadmeFile>
    </PropertyGroup>

    <ItemGroup Condition="'$(UseLocalProjectReferences)'=='true'">
        <ProjectReference Include="..\..\core\CanKit.Core\CanKit.Core.csproj"/>
    </ItemGroup>

    <ItemGroup Condition="'$(UseLocalProjectReferences)'!='true'">
        <PackageReference Include="CanKit.Core" Version="$(CanKitCoreVersion)"/>
    </ItemGroup>
    
    <ItemGroup>
        <None Include="buildTransitive\**\*.*" Pack="true" PackagePath="buildTransitive\" />
    </ItemGroup>
    
    <ItemGroup>
        <None Include="README.md" Pack="true" PackagePath="" />
    </ItemGroup>
    
    <ItemGroup>
      <Compile Remove="ZlgCapabilitySniffer.cs" />
    </ItemGroup>
    
</Project>
