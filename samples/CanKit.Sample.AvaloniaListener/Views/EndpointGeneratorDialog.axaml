<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="using:CanKit.Sample.AvaloniaListener.ViewModels"
        mc:Ignorable="d"
        x:Class="CanKit.Sample.AvaloniaListener.Views.EndpointGeneratorDialog"
        x:DataType="vm:EndpointGeneratorViewModel"
        Title="{DynamicResource EndpointGen.Title}" Width="520" Height="240"
        WindowStartupLocation="CenterOwner">
  <Design.DataContext>
    <vm:EndpointGeneratorViewModel/>
  </Design.DataContext>
    <Grid Margin="12"
          RowDefinitions="Auto,Auto,Auto,*"
          ColumnDefinitions="Auto,*">
      <Grid.Styles>
        <Style Selector="TextBox, ComboBox">
          <Setter Property="MinHeight" Value="32"/>
          <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
      </Grid.Styles>

      <TextBlock Grid.Row="0" Grid.Column="0" Text="{DynamicResource EndpointGen.Vendor}" VerticalAlignment="Center" MinWidth="65" Margin="0,5,0,5"/>
      <ComboBox  Grid.Row="0" Grid.Column="1"
                 ItemsSource="{Binding Vendors}"
                 SelectedItem="{Binding SelectedVendor}"/>

      <TextBlock Grid.Row="1" Grid.Column="0" Text="{DynamicResource EndpointGen.Device}" VerticalAlignment="Center" Margin="0,5,0,5"/>
      <ComboBox  Grid.Row="1" Grid.Column="1"
                 ItemsSource="{Binding ZlgDevices}"
                 SelectedItem="{Binding SelectedZlgDevice}" Margin="0,5,0,5"/>

      <TextBlock Grid.Row="2" Grid.Column="0" Text="{DynamicResource EndpointGen.DeviceIndex}" VerticalAlignment="Center" Margin="0,5,0,5"/>
      <Grid Grid.Row="2" Grid.Column="1"
            ColumnDefinitions="Auto,80,12,Auto,80"
            HorizontalAlignment="Left" Margin="0,5,0,5">
        <TextBox   Grid.Column="1" Text="{Binding DeviceIndex, Mode=TwoWay}"/>
        <TextBlock Grid.Column="3" Text="{DynamicResource EndpointGen.Port}" VerticalAlignment="Center" Margin="0,0,10,0"/>
        <TextBox   Grid.Column="4" Text="{Binding DevicePort, Mode=TwoWay}"/>
      </Grid>

      <StackPanel Grid.Row="3" Grid.ColumnSpan="2"
                  Orientation="Horizontal"
                  Spacing="8"
                  HorizontalAlignment="Right"
                  VerticalAlignment="Bottom">
        <TextBlock Text="{DynamicResource EndpointGen.Preview}" VerticalAlignment="Center"/>
        <TextBlock Text="{Binding Preview}" VerticalAlignment="Center" Foreground="Gray" Margin="4,0,12,0"/>
        <Button Width="80" IsDefault="True" Content="{DynamicResource EndpointGen.Generate}" Click="OnGenerate"/>
        <Button Width="80" IsCancel="True" Content="{DynamicResource EndpointGen.Cancel}" Margin="8,0,0,0"/>
      </StackPanel>
    </Grid>
</Window>
