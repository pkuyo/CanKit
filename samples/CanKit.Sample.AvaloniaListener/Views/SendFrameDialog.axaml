<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="CanKit.Sample.AvaloniaListener.Views.SendFrameDialog"
        Title="Send Frame" Height="320" Width="560"
        WindowStartupLocation="CenterOwner">
  <Grid Margin="12" RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto" ColumnDefinitions="*">
    <!-- Frame type and ID type -->
    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
      <TextBlock Text="Frame" VerticalAlignment="Center" Margin="0,0,8,0"/>
      <ComboBox x:Name="FrameTypeCombo" Width="140" SelectionChanged="OnFrameTypeChanged">
        <ComboBoxItem Content="CAN20"/>
        <ComboBoxItem Content="CANFD"/>
      </ComboBox>

      <TextBlock Text="ID Type" VerticalAlignment="Center" Margin="16,0,8,0"/>
      <ComboBox x:Name="IdTypeCombo" Width="140">
        <ComboBoxItem Content="Standard"/>
        <ComboBoxItem Content="Extend"/>
      </ComboBox>
    </StackPanel>

    <!-- ID and DLC -->
    <Grid Grid.Row="1" Margin="0,0,0,8" ColumnDefinitions="Auto,120,Auto,100">
      <TextBlock Text="ID" VerticalAlignment="Center"/>
      <TextBox x:Name="IdBox" Grid.Column="1" Margin="8,0,0,0"/>
      <TextBlock Text="DLC" Grid.Column="2" VerticalAlignment="Center" Margin="16,0,0,0"/>
      <TextBox x:Name="DlcBox" Grid.Column="3" Margin="8,0,0,0"/>
    </Grid>

    <!-- Data -->
    <StackPanel Grid.Row="2" Orientation="Vertical">
      <TextBlock Text="Data (hex, space/comma separated)"/>
      <TextBox x:Name="DataBox" Margin="0,4,0,0" Height="80" AcceptsReturn="True" TextWrapping="Wrap"/>
    </StackPanel>

    <!-- Flags: RTR/BRS -->
    <StackPanel Grid.Row="3" Orientation="Horizontal" Margin="0,8,0,0" Spacing="16">
      <CheckBox x:Name="RtrCheck" Content="RTR"/>
      <CheckBox x:Name="BrsCheck" Content="BRS"/>
    </StackPanel>

    <TextBlock x:Name="ErrorText" Grid.Row="4" Foreground="Red" TextWrapping="Wrap"/>

    <StackPanel Orientation="Horizontal" Grid.Row="5" HorizontalAlignment="Right" Margin="0,8,0,0" Spacing="8">
      <Button Width="100" Content="Send" IsDefault="True" Command="{Binding SendCommand}"/>
      <Button Width="100" Content="Close" IsCancel="True" Command="{Binding CloseCommand}"/>
    </StackPanel>
  </Grid>
</Window>
