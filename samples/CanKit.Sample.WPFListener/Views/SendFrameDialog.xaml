<Window x:Class="EndpointListenerWpf.Views.SendFrameDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Send Frame" Height="280" Width="520" WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize" WindowStyle="SingleBorderWindow">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Frame type and ID type -->
        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
            <TextBlock Text="Frame:" VerticalAlignment="Center" Margin="0,0,8,0"/>
            <ComboBox x:Name="FrameTypeCombo" Width="140">
                <ComboBoxItem Content="CAN 2.0"/>
                <ComboBoxItem Content="CAN FD"/>
            </ComboBox>

            <TextBlock Text="ID Type:" VerticalAlignment="Center" Margin="16,0,8,0"/>
            <ComboBox x:Name="IdTypeCombo" Width="140">
                <ComboBoxItem Content="Standard"/>
                <ComboBoxItem Content="Extend"/>
            </ComboBox>
        </StackPanel>

        <!-- ID and DLC -->
        <Grid Grid.Row="1" Margin="0,0,0,8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="80"/>
            </Grid.ColumnDefinitions>
            <TextBlock Text="ID:" VerticalAlignment="Center"/>
            <TextBox x:Name="IdBox" Grid.Column="1" Margin="8,0,0,0"/>
            <TextBlock Text="DLC:" Grid.Column="2" VerticalAlignment="Center" Margin="16,0,0,0"/>
            <TextBox x:Name="DlcBox" Grid.Column="3" Margin="8,0,0,0"/>
        </Grid>

        <!-- Data -->
        <StackPanel Grid.Row="2" Orientation="Vertical">
            <TextBlock Text="Data (hex bytes, e.g. 01 02 0A FF):"/>
            <TextBox x:Name="DataBox" Margin="0,4,0,0" Height="60" AcceptsReturn="True" TextWrapping="Wrap"/>
        </StackPanel>

        <TextBlock Grid.Row="3" Foreground="Gray" Text="ID accepts decimal or hex (e.g., 0x123). For CAN FD, DLC maps to length (9->12,10->16,...,15->64)." TextWrapping="Wrap"/>

        <StackPanel Orientation="Horizontal" Grid.Row="4" HorizontalAlignment="Right" Margin="0,8,0,0">
            <Button Width="90" Content="Send" IsDefault="True" Click="OnSend" Margin="0,0,8,0"/>
            <Button Width="90" Content="Close" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>

