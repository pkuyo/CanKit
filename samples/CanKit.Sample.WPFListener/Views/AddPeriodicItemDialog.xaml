<Window x:Class="EndpointListenerWpf.Views.AddPeriodicItemDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Periodic Item" Height="360" Width="520" WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize" WindowStyle="SingleBorderWindow">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Frame type and ID type -->
        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
            <TextBlock Text="Frame:" VerticalAlignment="Center" Margin="0,0,8,0"/>
            <ComboBox x:Name="FrameTypeCombo" Width="140" SelectionChanged="OnFrameTypeChanged">
                <ComboBoxItem Content="CAN 2.0"/>
                <ComboBoxItem Content="CAN FD"/>
            </ComboBox>

            <TextBlock Text="ID Type:" VerticalAlignment="Center" Margin="16,0,8,0"/>
            <ComboBox x:Name="IdTypeCombo" Width="140">
                <ComboBoxItem Content="Standard"/>
                <ComboBoxItem Content="Extend"/>
            </ComboBox>
        </StackPanel>

        <!-- ID and DLC -->
        <Grid Grid.Row="1" Margin="0,0,0,8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="80"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <TextBlock Text="ID:" VerticalAlignment="Center"/>
            <TextBox x:Name="IdBox" Grid.Column="1" Margin="8,0,0,0"/>
            <TextBlock Text="DLC:" Grid.Column="2" VerticalAlignment="Center" Margin="16,0,0,0"/>
            <TextBox x:Name="DlcBox" Grid.Column="3" Margin="8,0,0,0"/>
            <TextBlock Text="Period (ms):" Grid.Column="4" VerticalAlignment="Center" Margin="16,0,0,0"/>
            <TextBox x:Name="PeriodBox" Grid.Column="5" Margin="8,0,0,0"/>
        </Grid>

        <!-- Data -->
        <StackPanel Grid.Row="2" Orientation="Vertical">
            <TextBlock Text="Data (hex bytes, e.g. 01 02 0A FF):"/>
            <TextBox x:Name="DataBox" Margin="0,4,0,0" Height="80" AcceptsReturn="True" TextWrapping="Wrap"/>
        </StackPanel>

        <!-- Flags -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" Margin="0,8,0,0">
            <CheckBox x:Name="RtrCheck" Content="RTR (CAN 2.0)" Margin="0,0,16,0"/>
            <CheckBox x:Name="BrsCheck" Content="BRS (CAN FD)"/>
        </StackPanel>

        <TextBlock Grid.Row="4" Foreground="Gray" Text="ID accepts decimal or hex (e.g., 0x123). For CAN FD, DLC maps to length (9->12,10->16,...,15->64). RTR ignores data and uses DLC only." TextWrapping="Wrap"/>

        <StackPanel Grid.Row="5" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,8,0,0">
            <Button Content="OK" Width="90" Margin="0,0,8,0" IsDefault="True" Click="OnOk"/>
            <Button Content="Cancel" Width="90" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>
