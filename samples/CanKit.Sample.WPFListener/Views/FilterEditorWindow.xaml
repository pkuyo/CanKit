<Window x:Class="EndpointListenerWpf.Views.FilterEditorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Filters" Height="360" Width="888">
    <DockPanel Margin="12">
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Bottom" HorizontalAlignment="Right" Margin="0,8,0,0">
            <Button Content="Add" Width="80" Margin="0,0,8,0" Command="{Binding AddCommand}"/>
            <Button Content="Delete" Width="80" Command="{Binding DeleteCommand}"/>
            <Button Content="Close" Width="80" Margin="16,0,0,0" IsCancel="True"/>
        </StackPanel>

        <ListView ItemsSource="{Binding Filters}" SelectedItem="{Binding Selected}" BorderThickness="1" BorderBrush="#DDD">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Type" Width="100" DisplayMemberBinding="{Binding Kind}"/>
                    <GridViewColumn Header="ID Type" Width="120" DisplayMemberBinding="{Binding IdType}"/>
                    <GridViewColumn Header="Acc/From" Width="140" DisplayMemberBinding="{Binding AccCode}"/>
                    <GridViewColumn Header="Mask/To" Width="140" DisplayMemberBinding="{Binding AccMask}"/>
                    <GridViewColumn Header="Summary" Width="280" DisplayMemberBinding="{Binding}"/>
                </GridView>
            </ListView.View>
        </ListView>
    </DockPanel>
</Window>

